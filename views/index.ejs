<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
      <div class="container">
        <hr>
        <h2>PARTICIPANTES</h2>
        <div style="display: inline;">
          <a class="btn btn-warning text-light" href="/adicionar">INCLUIR</a>
          <a class="btn btn-success text-light" href="/sorteio">SORTEAR</a>
          <a class="btn btn-danger text-light" href="/limpar">LIMPAR PARTICIPANTES</a>
        </div>
        <hr>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>NOME</th>
              <th>EMAIL</th>
              <th>EXCLUIR</th>
            </tr>
          </thead>
          <tbody>
            <% participantes.forEach(participante => { %>
              <tr>
                <th><%= participante.nome %></th>
                <th><%= participante.email %></th>
                <th>
                  <form method="POST" action="/deletar" onsubmit="Confirmar(event, this)">
                    <input type="hidden" name="id" value="<%= participante.id %>">
                    <button class=" btn btn-danger">EXCLUIR</button>
                  </form>
                </th>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    </body>
</html>

<script>
  function Confirmar(event, form){
    event.preventDefault();
    var excluir = confirm("Excluir participante?")
    if(excluir){
      form.submit();
    }
  }
</script>